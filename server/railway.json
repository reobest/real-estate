{
  "build": {
    "builder": "NIXPACKS",
    "nixpacksPlan": {
      "phases": {
        "install": {
          "cmds": ["npm ci"]
        },
        "build": {
          "cmds": ["npm run build"]
        },
        "start": {
          "cmd": "node dist/index.js"
        }
      }
    }
  },
  "deploy": {
    "startCommand": "node dist/index.js"
  }
}
